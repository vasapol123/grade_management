// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id            Int            @id @default(autoincrement())
  year          String
  Registrations Registration[]
  Grades        Grade[]
  AveragePoint  AveragePoint[]
}

model Course {
  id            Int            @id @default(autoincrement())
  code          String         @unique
  name          String
  credit        Int
  Registrations Registration[]
  Grade         Grade?
}

model Grade {
  id     Int    @id @default(autoincrement())
  result String

  student   Student @relation(fields: [studentId], references: [id])
  studentId Int
  course    Course  @relation(fields: [courseId], references: [id])
  courseId  Int     @unique
}

model AveragePoint {
  id           Int    @id @default(autoincrement())
  semester     String
  academicYear String
  gpa          String
  gpax         String

  student   Student @relation(fields: [studentId], references: [id])
  studentId Int
}

model Registration {
  id           Int    @id @default(autoincrement())
  semester     String
  academicYear String

  student   Student @relation(fields: [studentId], references: [id])
  studentId Int
  course    Course  @relation(fields: [courseId], references: [id])
  courseId  Int
}
